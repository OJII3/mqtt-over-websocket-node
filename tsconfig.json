{
  "extends": "@tsconfig/node16/tsconfig.json",
  "ts-node": {
    "files": true,
    "transpileOnly": true,
  },
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "lib": ["dom"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "noEmit": true,
    "module": "NodeNext",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "incremental": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}