{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "recommended": true
      },
      "complexity": {
        "recommended": true
      },
      "correctness" : {
        "recommended": true
      }
    },
    "ignore": ["node_modules"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentSize": 2,
    "lineWidth": 120,
    "ignore": ["node_modules"]
  },
  "javascript": {
    "formatter": {
      "quoteProperties": "asNeeded",
      "quoteStyle": "single"
    }
  }
}